@model ModelUsers
@{
	ViewData["Modal"] = "إضافة مستخدم جديد";
}

<div class="modal fade" id="kt_modal_add" tabindex="-1" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered mw-650px">
		<div class="modal-content">
			<div class="modal-header ribbon ribbon-start ribbon-clip" id="kt_modal_add_header">
				<div class="ribbon-label fs-4">
					@ViewData["Modal"]
					<span class="ribbon-inner bg-info"></span>
				</div>
				<div class="card-title">
					<div class="d-flex align-items-center position-relative my-1"></div>
				</div>
				<div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
					<span class="svg-icon svg-icon-1">
						<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
							<rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor" />
							<rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor" />
						</svg>
					</span>
				</div>
			</div>


			<form id="kt_modal_add_form" class="form" asp-controller="Users" asp-action="Create" onsubmit="return CreatePost()" method="post">
				<div class="modal-body scroll-y mx-5 mx-xl-15 my-2">
					<div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_add_scroll">

						<!--begin::Alert-->
						<div class="alert alert-dismissible bg-light-info border border-info border-dashed d-flex flex-column flex-sm-row w-100 p-5 mb-10">
							<span class="svg-icon svg-icon-2hx svg-icon-info me-4 mb-5 mb-sm-0">
								<svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
									<path opacity="0.3" d="M2 4V16C2 16.6 2.4 17 3 17H13L16.6 20.6C17.1 21.1 18 20.8 18 20V17H21C21.6 17 22 16.6 22 16V4C22 3.4 21.6 3 21 3H3C2.4 3 2 3.4 2 4Z" fill="currentColor" />
									<path d="M18 9H6C5.4 9 5 8.6 5 8C5 7.4 5.4 7 6 7H18C18.6 7 19 7.4 19 8C19 8.6 18.6 9 18 9ZM16 12C16 11.4 15.6 11 15 11H6C5.4 11 5 11.4 5 12C5 12.6 5.4 13 6 13H15C15.6 13 16 12.6 16 12Z" fill="currentColor" />
								</svg>
							</span>
							<div class="d-flex flex-column pe-0 pe-sm-10">
								<h5 class="mb-1">تنبية !</h5>
								<span>فى حالة إضافة مستخدم جديد تكون كلمة المرور : 123456</span>
							</div>
						</div>
						<!--end::Alert-->
						<!--begin::Input group - الفروع-->
						<div class="row mb-4">
							<div class="col-xl-12">
								<label class="required fw-semibold fs-6 mb-2">الفــرع</label>
								<select name="branchID" class="form-select form-select-solid" required>
									<option value="">اختر الفرع</option>
									@foreach (var item in Model.BranchList)
									{
										<option value="@item.Value">@item.Text</option>
									}
								</select>
							</div>
						</div>
						<!--end::Input group-->
						<!--begin::Input group - نوع المستخدم-->
						<div class="row mb-4">
							<div class="col-xl-12">
								<label class="required fw-semibold fs-6 mb-2">نوع المستخدم</label>
								<select name="userType" class="form-select form-select-solid" required>
									<option value="">اختر نوع المستخدم</option>
									@foreach (var item in Model.UserTypeList)
									{
										<option value="@item.Value">@item.Text</option>
									}
								</select>
							</div>
						</div>
						<!--end::Input group-->
						<!--begin::Input group - اسم المستخدم-->
						<div class="row mb-4">
							<div class="col-xl-12">
								<label class="required fw-semibold fs-6 mb-2">إسم المستخدم</label>
								<input type="text" name="userName" class="form-control form-control-solid text-center" placeholder="إسم المستخدم" required />
							</div>
						</div>
						<!--end::Input group-->

					</div>
				</div>

				<div class="modal-footer justify-content-center">
					<button type="submit" class="btn btn-primary" data-kt-modal-action="submit">
						<span class="indicator-label">حفظ</span>
						<span class="indicator-progress">
							... إنتظر
							<span class="spinner-border spinner-border-sm align-middle ms-2"></span>
						</span>
					</button>
					<button type="reset" class="btn btn-light me-3" data-kt-modal-action="cancel">الغاء</button>
				</div>
			</form>
		</div>
	</div>
</div>

