@{
    ViewData["Title"] = "إدارة الطلاب";
    ViewData["Page"] = "إدارة الطلاب";
}

<style>
    #studentsTable tbody tr:nth-child(odd) {
        background-color: #f2f2f2; 
        color: #000; 
    }

    #studentsTable tbody tr:nth-child(even) {
        background-color: #ffffff; 
        color: #000;
    }

    #studentsTable tbody tr:hover {
        background-color: #cce5ff;
        color: #000;
    }

    table.table-bordered.dataTable tbody th, table.table-bordered.dataTable tbody td{
        font-size: 1.2rem;
        font-weight: bold;
    }

</style>
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">إدارة الطلاب</h6>
            <div>
                <a href="@Url.Action("Archive", "Student")" class="btn btn-warning btn-sm">
                    <i class="fas fa-archive"></i> الأرشيف
                </a>
                <button type="button" class="btn btn-success btn-sm" onclick="ImportStudents()">
                    <i class="fas fa-file-excel"></i> استيراد من Excel
                </button>
                <button type="button" class="btn btn-primary btn-sm" onclick="CreateStudent()">
                    <i class="fas fa-plus"></i> إضافة طالب
                </button>
            </div>
        </div>
        <div class="card-body">
            <!-- Filter Section -->
            <div class="row mb-3">
                <div class="col-md-4">
                    <label>الصف:</label>
                    <select id="filterClass" class="form-control" onchange="LoadClassRooms(this.value)">
                        <option value="">الكل</option>
                        @foreach (var item in ViewBag.Classes)
                        {
                            <option value="@item.Value">@item.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-4">
                    <label>الفصل:</label>
                    <select id="filterClassRoom" class="form-control" onchange="LoadStudents()">
                        <option value="">الكل</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label>&nbsp;</label>
                    <button type="button" class="btn btn-primary btn-block" onclick="LoadStudents()">
                        <i class="fas fa-search"></i> بحث
                    </button>
                </div>
                <div class="col-md-2">
                    <label>&nbsp;</label>
                    <button type="button" class="btn btn-success btn-block" onclick="PrintAllCards()">
                        <i class="fas fa-print"></i> طباعة البطاقات
                    </button>
                </div>
            </div>

            <!-- QR Code Modal -->
            <div class="modal fade" id="qrCodeModal" tabindex="-1" role="dialog" aria-labelledby="qrCodeModalLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered" role="document" style="max-width:300px;">
                    <div class="modal-content" style="background-color:#fce4ec; text-align:center;">
                        <div class="modal-header" style="border-bottom:none; justify-content:center;">
                            <h5 class="modal-title" id="qrCodeModalLabel">QR Code الطالبة</h5>
                            <button type="button" class="btn-close" style="filter: invert(0);" data-bs-dismiss="modal" aria-label="إغلاق"></button>

                        </div>
                        <div class="modal-body">
                            <!-- هنا نعرض اسم الطالبة -->
                            <h6 id="qrStudentName" style="margin-bottom:15px; color:#c2185b;"></h6>
                            <canvas id="modalQRCode" style="margin:auto;"></canvas>
                        </div>
                        <div class="modal-footer" style="justify-content:center; border-top:none;">
                            <button type="button" class="btn btn-sm" style="background-color:#f48fb1; color:#fff; border:none; border-radius:5px;" onclick="downloadModalQRCode()">تحميل QR</button>
                        </div>
                    </div>
                </div>
            </div>



            <!-- Students Table -->
            <div class="table-responsive">
                <table id="studentsTable" class="table table-bordered table-hover" style="width:100%; color: white;">
                    <thead class="thead-light" style="color: white;">
                        <tr style="color: white;">
                            <th style="color: white;">رقم الطالب</th>
                            <th style="color: white;">اسم الطالب</th>
                            <th style="color: white;">رقم الجوال</th>
                            <th style="color: white;">الصف</th>
                            <th style="color: white;">الفصل</th>
                            <th style="color: white;">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody style="color: white;"></tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Modal Container -->
<div id="modalContainer"></div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap4.min.js"></script>

    <script src="https://cdn.jsdelivr.net/npm/qrcode/build/qrcode.min.js"></script>


  <script src="~/js/Students.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap4.min.css">
}
