<div class="modal fade" id="importModal" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header bg-success text-white">
                <h5 class="modal-title">استيراد الطلاب من Excel</h5>
                <button type="button" class="close text-white" data-dismiss="modal">
                    <span>&times;</span>
                </button>
            </div>
            <form asp-action="ImportStudents" asp-controller="Student" method="post" enctype="multipart/form-data" onsubmit="return ImportStudentsForm(this);">
                @Html.AntiForgeryToken()

                <div class="modal-body">
                    <div class="alert alert-info">
                        <h6 class="alert-heading"><i class="fas fa-info-circle"></i> تعليمات الاستيراد:</h6>
                        <ul class="mb-0">
                            <li>يجب أن يكون الملف بصيغة Excel (.xlsx أو .xls)</li>
                            <li>يجب أن يحتوي الصف الأول على العناوين التالية بنفس الترتيب:</li>
                            <ol>
                                <li><strong>الجوال</strong> - رقم جوال الطالب</li>
                                <li><strong>الفصل</strong> - رقم الفصل (مثال: 1)</li>
                                <li><strong>رقم الصف</strong> - رقم الصف (مثال: 0723)</li>
                                <li><strong>اسم الطالب</strong> - الاسم الكامل للطالب <span class="text-danger">(مطلوب)</span></li>
                                <li><strong>رقم الطالب</strong> - الرقم التعريفي للطالب <span class="text-danger">(مطلوب)</span></li>
                            </ol>
                            <li>إذا لم يكن الصف أو الفصل موجوداً، سيتم إنشاؤه تلقائياً</li>
                            <li>الطلاب الموجودون بنفس الرقم التعريفي سيتم تجاهلهم</li>
                        </ul>
                    </div>

                    <div class="alert alert-warning">
                        <h6 class="alert-heading"><i class="fas fa-exclamation-triangle"></i> مثال على البيانات:</h6>
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered">
                                <thead>
                                    <tr>
                                        <th>الجوال</th>
                                        <th>الفصل</th>
                                        <th>رقم الصف</th>
                                        <th>اسم الطالب</th>
                                        <th>رقم الطالب</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <tr>
                                        <td>966505792234</td>
                                        <td>1</td>
                                        <td>0723</td>
                                        <td>أحمد محمد علي</td>
                                        <td>1163713595</td>
                                    </tr>
                                    <tr>
                                        <td>966566231915</td>
                                        <td>1</td>
                                        <td>0723</td>
                                        <td>فاطمة سعيد أحمد</td>
                                        <td>1162672560</td>
                                    </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="excelFile" class="control-label">اختر ملف Excel <span class="text-danger">*</span></label>
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="excelFile" name="excelFile" accept=".xlsx,.xls" required>
                            <label class="custom-file-label" for="excelFile">اختر الملف...</label>
                        </div>
                        <small class="form-text text-muted">الملفات المدعومة: .xlsx, .xls</small>
                    </div>

                    <!-- Progress Bar -->
                    <div id="importProgress" class="progress d-none" style="height: 25px;">
                        <div class="progress-bar progress-bar-striped progress-bar-animated" role="progressbar"
                             style="width: 100%">
                            جاري الاستيراد...
                        </div>
                    </div>

                    <!-- Results -->
                    <div id="importResults" class="mt-3 d-none"></div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">إلغاء</button>
                    <button type="submit" class="btn btn-success" id="importBtn">
                        <i class="fas fa-upload"></i> استيراد البيانات
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    // Update file input label with selected file name
    $('.custom-file-input').on('change', function() {
        var fileName = $(this).val().split('\\').pop();
        $(this).siblings('.custom-file-label').addClass('selected').html(fileName);
    });

    function ImportStudentsForm(form) {
        var fileInput = $('#excelFile')[0];

        if (!fileInput.files || fileInput.files.length === 0) {
            ShowToast('error', 'من فضلك اختر ملف Excel');
            return false;
        }

        // Show progress bar
        $('#importProgress').removeClass('d-none');
        $('#importResults').addClass('d-none');
        $('#importBtn').prop('disabled', true);

        $.ajax({
            url: $(form).attr('action'),
            type: 'POST',
            data: new FormData(form),
            processData: false,
            contentType: false,
            success: function (response) {
                $('#importProgress').addClass('d-none');
                $('#importBtn').prop('disabled', false);

                if (response.isValid) {
                    var resultHtml = '<div class="alert alert-success">';
                    resultHtml += '<h6 class="alert-heading"><i class="fas fa-check-circle"></i> نتائج الاستيراد:</h6>';
                    resultHtml += '<p class="mb-1"><strong>عدد الطلاب المستوردين بنجاح:</strong> ' + response.successCount + '</p>';

                    if (response.errorCount > 0) {
                        resultHtml += '<p class="mb-1 text-warning"><strong>عدد الطلاب الفاشلين:</strong> ' + response.errorCount + '</p>';

                        if (response.errors && response.errors.length > 0) {
                            resultHtml += '<hr><h6>الأخطاء:</h6><ul class="mb-0">';
                            response.errors.forEach(function(error) {
                                resultHtml += '<li class="text-danger">' + error + '</li>';
                            });
                            resultHtml += '</ul>';
                        }
                    }

                    resultHtml += '</div>';

                    $('#importResults').html(resultHtml).removeClass('d-none');

                    // Reload students table after 2 seconds
                    setTimeout(function() {
                        $('#importModal').modal('hide');
                        LoadStudents();
                        ShowToast('success', response.message);
                    }, 2000);
                } else {
                    $('#importResults').html('<div class="alert alert-danger">' + response.message + '</div>').removeClass('d-none');
                }
            },
            error: function(xhr) {
                $('#importProgress').addClass('d-none');
                $('#importBtn').prop('disabled', false);
                $('#importResults').html('<div class="alert alert-danger">حدث خطأ أثناء الاستيراد</div>').removeClass('d-none');
            }
        });

        return false;
    }
</script>