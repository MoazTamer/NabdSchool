@{
    ViewData["Title"] = "تقرير حضور الطلاب";
    ViewData["Page"] = "تقرير حضور الطلاب";

}

<link href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/buttons/2.4.2/css/buttons.bootstrap5.min.css" rel="stylesheet" />

<style>
    .card {
        border: none;
        box-shadow: 0 0 20px rgba(0,0,0,0.1);
    }

    .table th {
        background-color: #f8f9fa;
        font-weight: 600;
    }

    .status-present {
        color: #28a745;
        font-weight: bold;
    }

    .status-late {
        color: #ffc107;
        font-weight: bold;
    }

    .status-absent {
        color: #dc3545;
        font-weight: bold;
    }

    .filter-section {
        background: #f8f9fa;
        border-radius: 10px;
        padding: 20px;
        margin-bottom: 20px;
    }

    body, .card, .table, label, input, button, h4, h5, p, span {
        font-size: 1.3rem !important;
    }
    label {
        font-weight: bold !important;
    }

    #studentNameDisplay {
        font-size: 2rem !important;
    }

    #statisticsSection h4 {
        font-size: 1.8rem !important;
        font-weight: bold;
    }



</style>

<div class="card shadow-sm mt-4">
    <div class="card-header bg-primary text-white py-6">
        <h4 class="mb-0"><i class="fas fa-chart-line"></i> تقرير حضور الطلاب</h4>
    </div>

    <div class="card-body">
        <!-- فلتر البحث -->
        <div class="filter-section">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label for="studentIdentifierFilter">الاسم أو كود الطالب</label>
                        <input type="text" class="form-control py-3" id="studentIdentifierFilter" placeholder="أدخل الاسم أو كود الطالب" value="@ViewBag.StudentIdentifier">
                    </div>
                </div>


                <div class="col-md-3">
                    <div class="form-group">
                        <label for="startDateFilter">من تاريخ</label>
                        <input type="date" class="form-control py-3" id="startDateFilter" value="@ViewBag.FromDate">
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label for="endDateFilter">إلى تاريخ</label>
                        <input type="date" class="form-control py-3" id="endDateFilter" value="@ViewBag.Date">
                    </div>
                </div>


                <div class="col-md-4">
                    <div class="form-group">
                        <label>&nbsp;</label>
                        <div>
                            <button type="button" id="searchBtn" class="btn btn-primary">
                                <i class="fas fa-search"></i> بحث
                            </button>
                            <button type="button" id="printBtn" class="btn btn-success">
                                <i class="fas fa-print"></i> طباعة
                            </button>
                            <button type="button" id="resetBtn" class="btn btn-secondary">
                                <i class="fas fa-redo"></i> إعادة تعيين
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- اسم الطالبة -->
        <div id="studentNameHeader" class="mb-4" style="display:none;">
            <h2 class="fw-bold" id="studentNameDisplay"></h2>
        </div>

       

        <!-- الجدول -->
        <div class="table-responsive">
            <table id="studentAttendanceTable" class="table table-striped table-bordered" style="width:100%">
                <thead class="bg-light">
                    <tr>
                        <th>التاريخ</th>
                        <th>الحالة</th>
                        <th>الوقت</th>
                        <th>ملاحظات</th>
                    </tr>
                </thead>
            </table>
        </div>

        <!-- الإحصائيات -->
        <div class="row mt-4" id="statisticsSection" style="display: none;">
            <div class="col-md-12">
                <div class="card bg-light">
                    <div class="card-body">
                        <h5 class="card-title">إحصائيات الحضور</h5>
                        <div class="row text-center">
                            <div class="col-md-3">
                                <div class="p-3 bg-success text-white rounded">
                                    <h4 id="totalPresent">0</h4>
                                    <p class="fw-bold">أيام حضور</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="p-3 bg-warning text-white rounded">
                                    <h4 id="totalLate">0</h4>
                                    <p class="fw-bold">أيام تأخر</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="p-3 bg-danger text-white rounded">
                                    <h4 id="totalAbsent">0</h4>
                                    <p class="fw-bold">أيام غياب</p>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="p-3 bg-info text-white rounded">
                                    <h4 id="consecutiveAbsent">0</h4>
                                    <p class="fw-bold">غياب متتالي</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script src="~/js/StudentReport.js"></script>

}