@using SalesModel.Models
@model DashboardViewModel
@{
    ViewData["Page"] = "الرئيسية";
}
<!--begin::Content wrapper-->
<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar pt-7 pt-lg-10 bg-light">
        <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
            <div class="app-toolbar-wrapper flex-stack flex-wrap w-100">
                <!-- اللوجو الجديد - أكبر وأوضح -->
                <div class="w-100 d-flex flex-column align-items-center justify-content-center text-center">

                    <div class="symbol symbol-200px symbol-circle mb-4">
                        <img src="~/images/school-logo.png" alt="شعار المدرسة"
                             style="width: 200px; height: 200px; object-fit: contain; border-radius: 50%;
                    border: 4px solid #009ef7; box-shadow: 0 0 25px rgba(0, 158, 247, 0.35);"
                             onerror="this.src='https://via.placeholder.com/200x200/009ef7/ffffff?text=LOGO'" />
                    </div>

                    <h1 class="text-dark fw-bold fs-1 mb-2">
                        <i class="ki-outline ki-home-2 fs-2 me-2 text-primary"></i>
                        @ViewData["Page"]
                    </h1>

                    <span class="text-muted fw-semibold fs-5">
                        لوحة التحكم - نظام إدارة حضور الطلاب
                    </span>

                </div>

                <!-- التاريخ والوقت -->
                <div class="d-flex align-items-center gap-4">
                    <div class="d-flex flex-column text-end">
                        <div class="badge badge-light-primary fs-6 fw-bold p-3 mb-2">
                            <i class="ki-outline ki-calendar fs-4 me-2 text-primary"></i>
                            <span id="currentDate" class="fs-5"></span>
                        </div>
                        <div class="badge badge-light-info fs-6 fw-bold p-3">
                            <i class="ki-outline ki-time fs-4 me-2 text-info"></i>
                            <span id="currentTime" class="fs-5"></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-fluid">

            <!-- -->
            <div class="row g-5 g-xl-10">
                <!--  اجراءات سريعة -->
                <div class="col-xl-4 col-lg-4 col-md-12 ">
                    <div class="card card-flush h-md-45 shadow-sm mb-10">
                        <div class="card-header pt-7">
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label fw-bold text-gray-800">
                                    <i class="ki-outline ki-abstract-26 fs-2 text-primary me-2"></i>
                                    إجراءات سريعة
                                </span>
                                @* <span class="text-muted mt-1 fw-semibold fs-7">الوصول السريع للعمليات الأساسية</span> *@
                            </h3>
                        </div>
                        <div class="card-body pt-5">
                            <div class="d-grid gap-4">
                                <a href="@Url.Action("AttendanceRegistration", "Home")"
                                   class="btn btn-lg btn-light-primary d-flex align-items-center justify-content-between">
                                    <span class="d-flex align-items-center">
                                        <i class="ki-outline ki-calendar-tick fs-2x me-4"></i>
                                        <span class="d-flex flex-column align-items-start">
                                            <span class="fw-bold fs-4">تسجيل الحضور</span>
                                            <span class="text-muted fs-7">تسجيل حضور طلاب اليوم</span>
                                        </span>
                                    </span>
                                    <i class="ki-outline ki-arrow-left fs-2"></i>
                                </a>

                            </div>
                            <div class="d-grid gap-4 py-4">
                                <a href="javascript:void(0)"
                                   onclick="registerAllStudents()"
                                   class="btn btn-lg btn-light-primary d-flex align-items-center justify-content-between">

                                    <span class="d-flex align-items-center">
                                        <i class="ki-outline ki-calendar-tick fs-2x me-4"></i>
                                        <span class="d-flex flex-column align-items-start">
                                            <span class="fw-bold fs-4">تسجيل الحضور المجمع</span>
                                            <span class="text-muted fs-7">تسجيل حضور لكل الطلاب</span>
                                        </span>
                                    </span>
                                    <i class="ki-outline ki-arrow-left fs-2"></i>
                                </a>

                            </div>


                            <div class="col-12">
                                <a href="@Url.Action("Index", "AttendanceReports")"
                                   class="card card-bordered hover-elevate-up">
                                    <div class="card-body d-flex align-items-center p-4">
                                        <div class="symbol symbol-50px me-4">
                                            <div class="symbol-label bg-light-warning">
                                                <i class="ki-outline ki-chart-line-star fs-2x text-warning"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1">
                                            <span class="text-gray-800 fw-bold fs-5 d-block">ملخص الحضور</span>
                                            <span class="text-muted fs-7">ملخص الحضور الأسبوعي والشهري</span>
                                        </div>
                                        <i class="ki-outline ki-arrow-left fs-2 text-gray-500 ms-2"></i>
                                    </div>
                                </a>
                            </div>


                        </div>
                    </div>

                    <div class="card card-flush h-md-45 shadow-sm">
                        <div class="card-header pt-7">
                            <div class="card-title">
                                <h3 class="fw-bold text-gray-800">
                                    <i class="ki-outline ki-profile-user fs-2x text-primary me-2"></i>
                                    إحصائية الحضور
                                </h3>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between pt-0">
                            <div class="d-flex flex-column text-center mt-5">
                                <span class="fw-bold fs-2tx text-primary d-inline-flex align-items-center justify-content-center gap-2">
                                    <span id="presentCountShort" class="text-success">@Model.Present</span>
                                    <span class="fs-2 text-gray-500">/</span>
                                    <span id="totalStudentsShort">@Model.TotalStudents</span>
                                </span>
                                <span class="text-gray-600 fw-semibold fs-6 mt-2">عدد الحضور من إجمالي الطلاب</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-7 pt-5 border-top border-gray-300">
                                <span class="text-gray-600 fs-7">
                                    <i class="ki-outline ki-check-circle text-success me-1"></i>
                                    نسبة الحضور
                                </span>
                                <span class="fw-bold text-success fs-6" id="attendancePercentage">0%</span>
                            </div>
                        </div>
                    </div>

                </div>



                <!-- الرسم البياني -->
                <div class="col-xl-8 col-lg-8 col-md-12">
                    <div class="card card-flush h-md-100 shadow-sm">
                        <div class="card-header border-0 pt-7">
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label fw-bold text-gray-800">
                                    <i class="ki-outline ki-chart-pie-3 fs-2 text-success me-2"></i>
                                    ملخص اليوم
                                </span>
                                <span class="text-muted mt-1 fw-semibold fs-7">إحصائيات الحضور لهذا اليوم</span>
                            </h3>
                        </div>
                        <div class="card-body pt-5">
                            <div class="d-flex flex-center mb-10">
                                <div class="position-relative" style="width: 200px; height: 200px;">
                                    <canvas id="attendanceChart"></canvas>
                                    <div class="position-absolute top-50 start-50 translate-middle text-center">
                                        <span class="fs-2tx fw-bold text-gray-800" id="chartPercentage">0%</span>
                                        <span class="d-block text-gray-600 fs-7">نسبة الحضور</span>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex flex-column gap-5">
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <div class="symbol symbol-40px me-3">
                                            <div class="symbol-label bg-light-success">
                                                <i class="ki-outline ki-check fs-2x text-success"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <span class="text-gray-800 fw-bold fs-6 d-block">الحضور</span>
                                            <span class="text-gray-500 fw-semibold fs-7">عدد الطلاب الحاضرين</span>
                                        </div>
                                    </div>
                                    <span class="badge badge-light-success fs-5 fw-bold" id="presentBadge">@Model.Present</span>
                                </div>
                                <div class="separator separator-dashed"></div>
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <div class="symbol symbol-40px me-3">
                                            <div class="symbol-label bg-light-danger">
                                                <i class="ki-outline ki-cross fs-2x text-danger"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <span class="text-gray-800 fw-bold fs-6 d-block">المتأخرين</span>
                                            <span class="text-gray-500 fw-semibold fs-7">عدد الطلاب المتأخرين</span>
                                        </div>
                                    </div>
                                    <span class="badge badge-light-danger fs-5 fw-bold" id="absentBadge">@Model.Late</span>
                                </div>

                                <div class="separator separator-dashed"></div>
                                <div class="d-flex align-items-center justify-content-between">
                                    <div class="d-flex align-items-center">
                                        <div class="symbol symbol-40px me-3">
                                            <div class="symbol-label bg-light-danger">
                                                <i class="ki-outline ki-cross fs-2x text-danger"></i>
                                            </div>
                                        </div>
                                        <div>
                                            <span class="text-gray-800 fw-bold fs-6 d-block">الغياب</span>
                                            <span class="text-gray-500 fw-semibold fs-7">عدد الطلاب الغائبين</span>
                                        </div>
                                    </div>
                                    <span class="badge badge-light-danger fs-5 fw-bold" id="absentBadge">@Model.Absent</span>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>


            </div>


            <!--begin::Attendance Stats-->
            <div class="row g-5 g-xl-10 mb-5 mb-xl-10 d-none">
                <!--begin::Present Card-->
                <div class="col-md-4 d-none">
                    <div class="card card-flush h-md-100 shadow-sm">
                        <div class="card-header pt-7">
                            <div class="card-title">
                                <h3 class="fw-bold text-gray-800">
                                    <i class="ki-outline ki-check-circle fs-2x text-success me-2"></i>
                                    عدد الحضور
                                </h3>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between pt-0">
                            <div class="d-flex flex-column text-center mt-5">
                                <span class="fw-bold fs-2tx text-success" id="presentCount">
                                    @Model.Present
                                </span>
                                <span class="text-gray-600 fw-semibold fs-6 mt-2">طالب حاضر</span>
                            </div>
                            <div class="progress h-8px bg-light-success mt-7">
                                <div class="progress-bar bg-success" role="progressbar" id="presentProgress" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Present Card-->
                <!--begin::Absent Card-->
                <div class="col-md-4 d-none">
                    <div class="card card-flush h-md-100 shadow-sm">
                        <div class="card-header pt-7">
                            <div class="card-title">
                                <h3 class="fw-bold text-gray-800">
                                    <i class="ki-outline ki-cross-circle fs-2x text-danger me-2"></i>
                                    عدد الغياب
                                </h3>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between pt-0">
                            <div class="d-flex flex-column text-center mt-5">
                                <span class="fw-bold fs-2tx text-danger" id="absentCount">
                                    @Model.Absent
                                </span>
                                <span class="text-gray-600 fw-semibold fs-6 mt-2">طالب غائب</span>
                            </div>
                            <div class="progress h-8px bg-light-danger mt-7">
                                <div class="progress-bar bg-danger" role="progressbar" id="absentProgress" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Absent Card-->
                <!--begin::Total Card-->
                @* <div class="col-md-12"> *@
                <div class="col-xl-4 col-lg-4 col-md-12">
                    <div class="card card-flush h-md-100 shadow-sm">
                        <div class="card-header pt-7">
                            <div class="card-title">
                                <h3 class="fw-bold text-gray-800">
                                    <i class="ki-outline ki-profile-user fs-2x text-primary me-2"></i>
                                    إحصائية الحضور
                                </h3>
                            </div>
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between pt-0">
                            <div class="d-flex flex-column text-center mt-5">
                                <span class="fw-bold fs-2tx text-primary d-inline-flex align-items-center justify-content-center gap-2">
                                    <span id="presentCountShort" class="text-success">@Model.Present</span>
                                    <span class="fs-2 text-gray-500">/</span>
                                    <span id="totalStudentsShort">@Model.TotalStudents</span>
                                </span>
                                <span class="text-gray-600 fw-semibold fs-6 mt-2">عدد الحضور من إجمالي الطلاب</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center mt-7 pt-5 border-top border-gray-300">
                                <span class="text-gray-600 fs-7">
                                    <i class="ki-outline ki-check-circle text-success me-1"></i>
                                    نسبة الحضور
                                </span>
                                <span class="fw-bold text-success fs-6" id="attendancePercentage">0%</span>
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Total Card-->
            </div>
            <!--end::Attendance Stats-->
            <!-- لوحة الشارات الرقمية -->
            <div class="row g-5 g-xl-10 mt-5">
                <!-- إحصائيات الشارات -->
                <div class="col-xl-12">
                    <div class="card card-flush shadow-sm">
                        <div class="card-header pt-7 pb-5">
                            <h3 class="card-title align-items-start flex-column">
                                <span class="card-label fw-bold text-gray-800 fs-1">
                                    <i class="ki-outline ki-medal-star fs-2 text-warning me-2"></i>
                                    🏆 لوحة الشرف - الطالبات المنضبطات
                                </span>
                                <span class="text-muted mt-1 fw-semibold fs-6">
                                    تكريم الطالبات المتميزات في الانضباط والمواظبة
                                </span>
                            </h3>
                        </div>
                        <div class="card-body pt-2">
                            <!-- إحصائيات الشارات -->
                            <div class="row g-3 mb-8">
                                <div class="col-6 col-md-3">
                                    <div class="badge-stat-box bg-light-primary p-4 rounded text-center">
                                        <i class="ki-outline ki-award fs-3x text-primary mb-2"></i>
                                        <div class="fw-bold fs-2 text-primary">@Model.BadgeStats.TotalBadgesEarned</div>
                                        <div class="text-gray-700 fw-semibold fs-7">إجمالي الشارات</div>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="badge-stat-box p-4 rounded text-center" style="background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);">
                                        <div class="fs-2x mb-2">💎</div>
                                        <div class="fw-bold fs-2" style="color: #1976d2;">@Model.BadgeStats.DiamondBadges</div>
                                        <div class="text-gray-700 fw-semibold fs-7">شارات ماسية</div>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="badge-stat-box p-4 rounded text-center" style="background: linear-gradient(135deg, #fff9c4 0%, #fff59d 100%);">
                                        <div class="fs-2x mb-2">🥇</div>
                                        <div class="fw-bold fs-2" style="color: #f57f17;">@Model.BadgeStats.GoldBadges</div>
                                        <div class="text-gray-700 fw-semibold fs-7">شارات ذهبية</div>
                                    </div>
                                </div>
                                <div class="col-6 col-md-3">
                                    <div class="badge-stat-box p-4 rounded text-center" style="background: linear-gradient(135deg, #f3e5f5 0%, #e1bee7 100%);">
                                        <div class="fs-2x mb-2">🥈</div>
                                        <div class="fw-bold fs-2" style="color: #7b1fa2;">@Model.BadgeStats.SilverBadges</div>
                                        <div class="text-gray-700 fw-semibold fs-7">شارات فضية</div>
                                    </div>
                                </div>
                            </div>

                            <!-- أفضل الطالبات -->
                            <div class="table-responsive">
                                <table class="table table-row-bordered table-hover align-middle gs-7">
                                    <thead>
                                        <tr class="fw-bold fs-6 text-light border-bottom-2 border-gray-200">
                                            <th class="min-w-50px text-center">الترتيب</th>
                                            <th class="min-w-200px">اسم الطالبة</th>
                                            <th class="min-w-150px text-center">النقاط</th>
                                            <th class="min-w-120px text-center">أيام متتالية</th>
                                            <th class="min-w-300px text-center">الشارات المكتسبة</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @for (int i = 0; i < Model.TopStudents.Count; i++)
                                        {
                                            var student = Model.TopStudents[i];
                                            var rankClass = i == 0 ? "gold-rank" : i == 1 ? "silver-rank" : i == 2 ? "bronze-rank" : "";
                                            var rankIcon = i == 0 ? "🥇" : i == 1 ? "🥈" : i == 2 ? "🥉" : $"{i + 1}";

                                            <tr class="@rankClass">
                                                <td class="text-center">
                                                    <span class="badge badge-circle badge-lg @(i < 3 ? "badge-light-warning" : "badge-light") fw-bold fs-4">
                                                        @rankIcon
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="symbol symbol-45px me-3" style="border: 2px solid @student.BadgeColor;">
                                                            <div class="symbol-label fs-3 fw-bold" style="background: @student.BadgeColor; color: white;">
                                                                @student.Student_Name.Substring(0, 1)
                                                            </div>
                                                        </div>
                                                        <div>
                                                            <a href="javascript:void(0)"
                                                               onclick="showStudentBadges(@student.Student_ID)"
                                                               class="fw-bold text-gray-800 fs-5 text-hover-primary">
                                                                @student.Student_Name
                                                            </a>
                                                            <span class="badge badge-light-@(i < 3 ? "warning" : "primary") fs-8 d-block mt-1">
                                                                @student.HighestBadgeLevel
                                                            </span>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="text-center">
                                                    <span class="badge badge-light-success fs-4 fw-bold px-4 py-3">
                                                        @student.Total_Points نقطة
                                                    </span>
                                                </td>
                                                <td class="text-center">
                                                    <div class="d-flex flex-column align-items-center">
                                                        <i class="ki-outline ki-chart-simple text-primary fs-2x mb-1"></i>
                                                        <span class="fw-bold text-primary fs-5">@student.Attendance_Streak</span>
                                                        <span class="text-gray-600 fs-8">يوم</span>
                                                    </div>
                                                </td>
                                                <td>
                                                    <div class="d-flex flex-wrap justify-content-center gap-2">
                                                        @foreach (var badge in student.Badges.Take(4))
                                                        {
                                                            <div class="badge-item" style="background: @badge.Badge_Color;"
                                                                 title="@badge.Badge_Name - @badge.Badge_Level">
                                                                <i class="ki-outline ki-@badge.Badge_Icon text-white fs-3"></i>
                                                            </div>
                                                        }
                                                        @if (student.Badges.Count > 4)
                                                        {
                                                            <div class="badge badge-light-primary fw-bold">
                                                                +@(student.Badges.Count - 4)
                                                            </div>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        </div>
    </div>
    <!--end::Content-->
</div>

<style>
    /* تنسيقات إضافية للوجو */
    .symbol-150px {
        width: 150px !important;
        height: 150px !important;
    }

    .symbol-label {
        object-fit: contain !important;
        border-radius: 50% !important;
        border: 3px solid #009ef7 !important;
        box-shadow: 0 0 20px rgba(0, 158, 247, 0.3) !important;
        transition: all 0.3s ease;
    }

        .symbol-label:hover {
            transform: scale(1.05);
            box-shadow: 0 0 30px rgba(0, 158, 247, 0.5) !important;
        }

    /* تحسين التباين */
    .bg-light {
        background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%) !important;
    }


    .badge-stat-box {
        transition: all 0.3s ease;
        cursor: default;
    }

    .badge-stat-box:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1);
    }

    .badge-item {
        width: 45px;
        height: 45px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 4px 8px rgba(0,0,0,0.15);
        transition: all 0.3s ease;
    }

        .badge-item:hover {
            transform: scale(1.15);
        }

    .gold-rank {
        background: linear-gradient(90deg, rgba(255,215,0,0.1) 0%, rgba(255,215,0,0.05) 100%);
    }

    .silver-rank {
        background: linear-gradient(90deg, rgba(192,192,192,0.1) 0%, rgba(192,192,192,0.05) 100%);
    }

    .bronze-rank {
        background: linear-gradient(90deg, rgba(205,127,50,0.1) 0%, rgba(205,127,50,0.05) 100%);
    }

    /* DataTables Styling */
    #badgesTable_wrapper .dataTables_filter,
    #badgesTable_wrapper .dataTables_length {
        margin-bottom: 1rem;
    }

        #badgesTable_wrapper .dataTables_filter input,
        #badgesTable_wrapper .dataTables_length select {
            border: 1px solid #e4e6ef;
            border-radius: 0.475rem;
            padding: 0.5rem 1rem;
            margin: 0 0.5rem;
        }

    #badgesTable_wrapper .dataTables_info,
    #badgesTable_wrapper .dataTables_paginate {
        margin-top: 1rem;
    }

    .dataTables_wrapper .dataTables_paginate .paginate_button {
        padding: 0.5rem 1rem;
        margin: 0 0.25rem;
        border-radius: 0.475rem;
    }

        .dataTables_wrapper .dataTables_paginate .paginate_button.current {
            background: #009ef7;
            color: white !important;
        }

</style>

<!--end::Content wrapper-->
