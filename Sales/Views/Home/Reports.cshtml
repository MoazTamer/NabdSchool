@{
    ViewData["Page"] = "التقارير";
}

<style>
    .hover-elevate-up {
        transition: all 0.3s ease;
        text-decoration: none;
    }

        .hover-elevate-up:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 30px rgba(0,0,0,0.15) !important;
        }

    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>

<!--begin::Content wrapper-->
<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar pt-7 pt-lg-10 bg-light">
        <div id="kt_app_toolbar_container" class="app-container container-fluid d-flex align-items-stretch">
            <div class="app-toolbar-wrapper d-flex flex-stack flex-wrap gap-4 w-100">
                <div class="page-title d-flex align-items-center gap-1 me-3">
                    <div class="symbol symbol-70px symbol-circle me-4">
                        <img src="~/images/school-logo.png" alt="شعار المدرسة" />
                    </div>
                    <div class="d-flex flex-column justify-content-center">
                        <h1 class="page-heading d-flex align-items-center text-dark fw-bold fs-3 m-0">
                            <i class="ki-outline ki-chart-simple fs-1 me-3 text-primary"></i>
                            @ViewData["Page"]
                        </h1>
                        <span class="text-muted fw-semibold fs-7">اختر التقرير المطلوب من القائمة أدناه</span>
                    </div>
                </div>
                <div class="d-flex align-items-center gap-2">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-sm btn-light-primary">
                        <i class="ki-outline ki-arrow-right fs-2"></i>
                        رجوع للرئيسية
                    </a>
                </div>
            </div>
        </div>
    </div>
    <!--end::Toolbar-->
    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-fluid">

            <!--begin::Categories-->
            <div class="row g-5 mb-10">
                <!--begin::Daily Reports-->
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light-primary">
                            <h3 class="card-title fw-bold text-gray-800">
                                <i class="ki-outline ki-calendar fs-2 text-primary me-2"></i>
                                التقارير اليومية
                            </h3>
                        </div>
                        <div class="card-body p-5">
                            <div class="row g-5">
                                <!--begin::Daily Absence-->
                                <div class="col-md-6 col-xl-4">
                                    <a href="@Url.Action("DailyAbsence", "Reports")" class="card card-flush h-100 hover-elevate-up">
                                        <div class="card-body d-flex flex-column p-8">
                                            <div class="d-flex align-items-center mb-5">
                                                <div class="symbol symbol-60px me-5">
                                                    <span class="symbol-label bg-light-danger">
                                                        <i class="ki-outline ki-information-3 fs-2x text-danger"></i>
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="text-gray-800 fw-bold fs-5 d-block">تقرير الغياب اليومي</span>
                                                    <span class="text-gray-500 fw-semibold fs-7">لكل صف وفصل</span>
                                                </div>
                                            </div>
                                            <p class="text-gray-600 fs-7 mb-5">
                                                عرض تفصيلي للطلاب الغائبين في يوم محدد مع إحصائيات شاملة لكل صف
                                            </p>
                                            <div class="d-flex align-items-center mt-auto">
                                                <span class="badge badge-light-danger fs-8 me-2">غياب</span>
                                                <span class="badge badge-light-primary fs-8">يومي</span>
                                                <i class="ki-outline ki-arrow-left fs-3 text-primary ms-auto"></i>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <!--end::Daily Absence-->
                                <!--begin::Daily Late-->
                                <div class="col-md-6 col-xl-4">
                                    <a href="@Url.Action("DailyLate", "Reports")" class="card card-flush h-100 hover-elevate-up">
                                        <div class="card-body d-flex flex-column p-8">
                                            <div class="d-flex align-items-center mb-5">
                                                <div class="symbol symbol-60px me-5">
                                                    <span class="symbol-label bg-light-warning">
                                                        <i class="ki-outline ki-time fs-2x text-warning"></i>
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="text-gray-800 fw-bold fs-5 d-block">تقرير التأخر اليومي</span>
                                                    <span class="text-gray-500 fw-semibold fs-7">لكل صف وفصل</span>
                                                </div>
                                            </div>
                                            <p class="text-gray-600 fs-7 mb-5">
                                                عرض الطلاب المتأخرين في يوم محدد مع أوقات التأخير ودقائق التأخير
                                            </p>
                                            <div class="d-flex align-items-center mt-auto">
                                                <span class="badge badge-light-warning fs-8 me-2">تأخير</span>
                                                <span class="badge badge-light-primary fs-8">يومي</span>
                                                <i class="ki-outline ki-arrow-left fs-3 text-primary ms-auto"></i>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <!--end::Daily Late-->
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Daily Reports-->
             
                <!--begin::Student Reports-->
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light-info">
                            <h3 class="card-title fw-bold text-gray-800">
                                <i class="ki-outline ki-profile-user fs-2 text-info me-2"></i>
                                تقارير الطلاب
                            </h3>
                        </div>
                        <div class="card-body p-5">
                            <div class="row g-5">
                                <!--begin::Student Report-->
                                <div class="col-md-6 col-xl-4">
                                    <a href="@Url.Action("StudentReport", "Reports")" class="card card-flush h-100 hover-elevate-up">
                                        <div class="card-body d-flex flex-column p-8">
                                            <div class="d-flex align-items-center mb-5">
                                                <div class="symbol symbol-60px me-5">
                                                    <span class="symbol-label bg-light-info">
                                                        <i class="ki-outline ki-user fs-2x text-info"></i>
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="text-gray-800 fw-bold fs-5 d-block">تقرير طالب معين</span>
                                                    <span class="text-gray-500 fw-semibold fs-7">تفصيلي</span>
                                                </div>
                                            </div>
                                            <p class="text-gray-600 fs-7 mb-5">
                                                سجل حضور وغياب وتأخير شامل لطالب محدد خلال فترة زمنية معينة
                                            </p>
                                            <div class="d-flex align-items-center mt-auto">
                                                <span class="badge badge-light-info fs-8 me-2">فردي</span>
                                                <span class="badge badge-light-primary fs-8">شامل</span>
                                                <i class="ki-outline ki-arrow-left fs-3 text-primary ms-auto"></i>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <!--end::Student Report-->
                              
                                <!--begin::Most Absent-->
                                <div class="col-md-6 col-xl-4">
                                    <a href="@Url.Action("MostAbsentStudents", "Reports")" class="card card-flush h-100 hover-elevate-up">
                                        <div class="card-body d-flex flex-column p-8">
                                            <div class="d-flex align-items-center mb-5">
                                                <div class="symbol symbol-60px me-5">
                                                    <span class="symbol-label bg-light-danger">
                                                        <i class="ki-outline ki-chart-line-down fs-2x text-danger"></i>
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="text-gray-800 fw-bold fs-5 d-block">أكثر الطلاب غيابًا</span>
                                                    <span class="text-gray-500 fw-semibold fs-7">ترتيب تنازلي</span>
                                                </div>
                                            </div>
                                            <p class="text-gray-600 fs-7 mb-5">
                                                قائمة بالطلاب الأكثر غيابًا خلال فترة محددة مع عدد أيام الغياب
                                            </p>
                                            <div class="d-flex align-items-center mt-auto">
                                                <span class="badge badge-light-danger fs-8 me-2">غياب</span>
                                                <span class="badge badge-light-warning fs-8">إحصائي</span>
                                                <i class="ki-outline ki-arrow-left fs-3 text-primary ms-auto"></i>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <!--end::Most Absent--> 
                         
                                <!--begin::Most Late-->
                                <div class="col-md-6 col-xl-4">
                                    <a href="@Url.Action("MostLateStudents", "Reports")" class="card card-flush h-100 hover-elevate-up">
                                        <div class="card-body d-flex flex-column p-8">
                                            <div class="d-flex align-items-center mb-5">
                                                <div class="symbol symbol-60px me-5">
                                                    <span class="symbol-label bg-light-warning">
                                                        <i class="ki-outline ki-timer fs-2x text-warning"></i>
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="text-gray-800 fw-bold fs-5 d-block">أكثر الطلاب تأخرًا</span>
                                                    <span class="text-gray-500 fw-semibold fs-7">ترتيب تنازلي</span>
                                                </div>
                                            </div>
                                            <p class="text-gray-600 fs-7 mb-5">
                                                قائمة بالطلاب الأكثر تأخرًا خلال فترة محددة مع عدد مرات التأخير
                                            </p>
                                            <div class="d-flex align-items-center mt-auto">
                                                <span class="badge badge-light-warning fs-8 me-2">تأخير</span>
                                                <span class="badge badge-light-info fs-8">إحصائي</span>
                                                <i class="ki-outline ki-arrow-left fs-3 text-primary ms-auto"></i>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <!--end::Most Late-->
                                <!--begin::Most Disciplined Students-->
                                <div class="col-md-6 col-xl-4">
                                    <a href="@Url.Action("MostDisciplinedStudents", "Reports")" class="card card-flush h-100 hover-elevate-up">
                                        <div class="card-body d-flex flex-column p-8">
                                            <div class="d-flex align-items-center mb-5">
                                                <div class="symbol symbol-60px me-5">
                                                    <span class="symbol-label bg-light-success">
                                                        <i class="ki-outline ki-user fs-2x text-info"></i>
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="text-gray-800 fw-bold fs-5 d-block">الطلاب الأكثر انضباطاً</span>
                                                    <span class="text-gray-500 fw-semibold fs-7">ترتيب تنازلي</span>
                                                </div>
                                            </div>
                                            <p class="text-gray-600 fs-7 mb-5">
                                                قائمة بالطلاب الأكثر انضباطًا خلال فترة محددة مع عدد أيام الحضور والتأخر والغياب
                                            </p>
                                            <div class="d-flex align-items-center mt-auto">
                                                <span class="badge badge-light-success fs-8 me-2">إحصائي</span>
                                                <span class="badge badge-light-primary fs-8">فترة محددة</span>
                                                <i class="ki-outline ki-arrow-left fs-3 text-primary ms-auto"></i>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <!--end::Most Disciplined Students-->
                                <!--begin::Most Disciplined Classes-->
                                <div class="col-md-6 col-xl-4">
                                    <a href="@Url.Action("MostDisciplinedClasses", "Reports")" class="card card-flush h-100 hover-elevate-up">
                                        <div class="card-body d-flex flex-column p-8">
                                            <div class="d-flex align-items-center mb-5">
                                                <div class="symbol symbol-60px me-5">
                                                    <span class="symbol-label bg-light-primary">
                                                        <i class="ki-outline ki-chart fs-2x text-primary"></i>
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="text-gray-800 fw-bold fs-5 d-block">الفصول الأكثر انضباطاً</span>
                                                    <span class="text-gray-500 fw-semibold fs-7">ترتيب تنازلي</span>
                                                </div>
                                            </div>
                                            <p class="text-gray-600 fs-7 mb-5">
                                                قائمة بالفصول الأكثر انضباطًا خلال فترة محددة مع متوسط نسبة الحضور والانضباط
                                            </p>
                                            <div class="d-flex align-items-center mt-auto">
                                                <span class="badge badge-light-primary fs-8 me-2">إحصائي</span>
                                                <span class="badge badge-light-success fs-8">فترة محددة</span>
                                                <i class="ki-outline ki-arrow-left fs-3 text-primary ms-auto"></i>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <!--end::Most Disciplined Classes-->

                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Student Reports-->
             
                <!--begin::Advanced Reports-->
                <div class="col-12">
                    <div class="card shadow-sm">
                        <div class="card-header bg-light-success">
                            <h3 class="card-title fw-bold text-gray-800">
                                <i class="ki-outline ki-chart-pie-simple fs-2 text-success me-2"></i>
                                تقارير متقدمة
                            </h3>
                        </div>
                        <div class="card-body p-5">
                            <div class="row g-5">
                                <!--begin::Most Late By Day-->
                                <div class="col-md-6 col-xl-4">
                                    <a href="@Url.Action("WeeklyLatePatternReport", "Reports")" class="card card-flush h-100 hover-elevate-up">
                                        <div class="card-body d-flex flex-column p-8">
                                            <div class="d-flex align-items-center mb-5">
                                                <div class="symbol symbol-60px me-5">
                                                    <span class="symbol-label bg-light-success">
                                                        <i class="ki-outline ki-calendar-8 fs-2x text-success"></i>
                                                    </span>
                                                </div>
                                                <div class="flex-grow-1">
                                                    <span class="text-gray-800 fw-bold fs-5 d-block">التأخر او الغياب حسب يوم الأسبوع</span>
                                                    <span class="text-gray-500 fw-semibold fs-7">تحليلي</span>
                                                </div>
                                            </div>
                                            <p class="text-gray-600 fs-7 mb-5">
                                                تحليل الطلاب الأكثر تأخرًا او غيابا في يوم معين من أيام الأسبوع (مثل: السبت، الأحد)
                                            </p>
                                            <div class="d-flex align-items-center mt-auto">
                                                <span class="badge badge-light-success fs-8 me-2">أسبوعي</span>
                                                <span class="badge badge-light-primary fs-8">تحليلي</span>
                                                <i class="ki-outline ki-arrow-left fs-3 text-primary ms-auto"></i>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <!--end::Most Late By Day-->
                             
                                <!--end::Placeholder-->
                            </div>
                        </div>
                    </div>
                </div>
                <!--end::Advanced Reports-->
            </div>
            <!--end::Categories-->
       
            
        </div>
    </div>
    <!--end::Content-->
</div>
<!--end::Content wrapper-->