@model ModelClassRoom
@{
    ViewData["Modal"] = "إضافة فصل جديد";
}

<div class="modal fade" id="kt_modal_add_room" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <div class="modal-content">
            <div class="modal-header ribbon ribbon-start ribbon-clip" id="kt_modal_add_room_header">
                <div class="ribbon-label fs-4">
                    @ViewData["Modal"]
                    <span class="ribbon-inner bg-success"></span>
                </div>
                <div class="card-title">
                    <div class="d-flex align-items-center position-relative my-1"></div>
                </div>
                <div class="btn btn-icon btn-sm btn-active-light-primary ms-2" data-bs-dismiss="modal" aria-label="Close">
                    <span class="svg-icon svg-icon-1">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect opacity="0.5" x="6" y="17.3137" width="16" height="2" rx="1" transform="rotate(-45 6 17.3137)" fill="currentColor" />
                            <rect x="7.41422" y="6" width="16" height="2" rx="1" transform="rotate(45 7.41422 6)" fill="currentColor" />
                        </svg>
                    </span>
                </div>
            </div>
            <form id="kt_modal_add_room_form" class="form" asp-controller="Class" asp-action="CreateClassRoom" onsubmit="return CreateClassRoomPost()" method="post">
                <input type="hidden" asp-for="Class_ID" />
                <div class="modal-body scroll-y mx-5 mx-xl-15 my-2">
                    @* <div class="d-flex flex-column scroll-y me-n7 pe-7" id="kt_modal_add_room_scroll" data-kt-scroll="true" data-kt-scroll-activate="{default: false, lg: true}" data-kt-scroll-max-height="auto" data-kt-scroll-dependencies="#kt_modal_add_room_header" data-kt-scroll-wrappers="#kt_modal_add_room_scroll" data-kt-scroll-offset="300px"> *@
                        <div class="row mb-2">
                            <label class="required fw-semibold fs-6 mb-2">اسم الفصل</label>
                            <input type="text" asp-for="ClassRoom_Name" name="classRoom_Name" class="form-control form-control-solid text-center mb-3 mb-lg-0" placeholder="مثال: فصل أ" required />
                        </div>
                    @* </div> *@
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="submit" class="btn btn-success" data-kt-modal-action="submit">
                        <span class="indicator-label">حفظ</span>
                        <span class="indicator-progress">
                            ... إنتظر
                            <span class="spinner-border spinner-border-sm align-middle ms-2"></span>
                        </span>
                    </button>
                    <button type="reset" class="btn btn-light me-3" data-kt-modal-action="cancel">الغاء</button>
                </div>
            </form>
        </div>
    </div>
</div>