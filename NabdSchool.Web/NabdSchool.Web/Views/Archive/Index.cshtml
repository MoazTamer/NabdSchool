@model IEnumerable<NabdSchool.Core.Entities.AuditLog>

@{
    ViewData["Title"] = "سجل التدقيق";
}

<div class="container-fluid mt-4" dir="rtl">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2 class="mb-0">
                <i class="fas fa-file-alt"></i> سجل التدقيق (Audit Log)
            </h2>
            <p class="text-muted">سجل شامل لجميع العمليات والتغييرات في النظام</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Statistics" class="btn btn-info">
                <i class="fas fa-chart-pie"></i> الإحصائيات
            </a>
            <a asp-action="Students" class="btn btn-secondary">
                <i class="fas fa-archive"></i> أرشيف الطلاب
            </a>
        </div>
    </div>

    <!-- Filters -->
    <div class="card mb-3 border-0 shadow-sm">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">الجدول</label>
                    <input type="text" name="searchTable" class="form-control"
                           value="@ViewBag.SearchTable" placeholder="اسم الجدول">
                </div>
                <div class="col-md-3">
                    <label class="form-label">من تاريخ</label>
                    <input type="date" name="fromDate" class="form-control" value="@ViewBag.FromDate">
                </div>
                <div class="col-md-3">
                    <label class="form-label">إلى تاريخ</label>
                    <input type="date" name="toDate" class="form-control" value="@ViewBag.ToDate">
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> بحث
                    </button>
                </div>
            </form>
        </div>
    </div>

    <!-- Audit Log Table -->
    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="auditTable">
                    <thead class="table-dark">
                        <tr>
                            <th>التاريخ والوقت</th>
                            <th>المستخدم</th>
                            <th>الإجراء</th>
                            <th>الجدول</th>
                            <th>التفاصيل</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var log in Model)
                            {
                                <tr>
                                    <td>
                                        <small>
                                            <i class="fas fa-calendar-day"></i>
                                            @log.DateTime.ToString("yyyy-MM-dd")
                                            <br>
                                            <i class="fas fa-clock"></i>
                                            @log.DateTime.ToString("HH:mm:ss")
                                        </small>
                                    </td>
                                    <td>
                                        <i class="fas fa-user"></i>
                                        @log.UserName
                                    </td>
                                    <td>
                                        @if (log.Action == "Insert")
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-plus"></i> إضافة
                                            </span>
                                        }
                                        else if (log.Action == "Update")
                                        {
                                            <span class="badge bg-warning">
                                                <i class="fas fa-edit"></i> تعديل
                                            </span>
                                        }
                                        else if (log.Action == "Delete")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-trash"></i> حذف
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@log.Action</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-info">@log.TableName</span>
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@log.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> عرض التفاصيل
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center">
                                    <div class="py-4">
                                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">لا توجد سجلات</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Any())
            {
                <div class="mt-3">
                    <p class="text-muted mb-0">
                        <i class="fas fa-info-circle"></i>
                        عدد السجلات: <strong>@Model.Count()</strong>
                        (محدود بآخر 500 سجل)
                    </p>
                </div>
            }
        </div>
    </div>

    <!-- Clear Old Logs -->
    @if (Model.Any())
    {
        <div class="card border-0 shadow-sm mt-3 border-danger">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 text-danger">
                            <i class="fas fa-exclamation-triangle"></i> حذف السجلات القديمة
                        </h6>
                        <small class="text-muted">حذف السجلات الأقدم من 6 أشهر لتحسين الأداء</small>
                    </div>
                    <button type="button" class="btn btn-danger" onclick="confirmClearLogs()">
                        <i class="fas fa-trash-alt"></i> حذف السجلات القديمة
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<!-- Clear Logs Modal -->
<div class="modal fade" id="clearLogsModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i> تأكيد الحذف
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>هل أنت متأكد من حذف جميع السجلات الأقدم من 6 أشهر؟</p>
                <p class="text-danger small mb-0">
                    <i class="fas fa-info-circle"></i> هذا الإجراء لا يمكن التراجع عنه
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> إلغاء
                </button>
                <form asp-action="ClearOldLogs" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="months" value="6" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> حذف
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#auditTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/ar.json'
                },
                pageLength: 25,
                order: [[0, 'desc']]
            });
        });

        function confirmClearLogs() {
            var modal = new bootstrap.Modal(document.getElementById('clearLogsModal'));
            modal.show();
        }
    </script>
}