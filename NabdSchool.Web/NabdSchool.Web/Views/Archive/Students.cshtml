@model IEnumerable<NabdSchool.Core.Entities.Student>

@{
    ViewData["Title"] = "أرشيف الطلاب المحذوفين";
}

<div class="container-fluid mt-4" dir="rtl">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2 class="mb-0">
                <i class="fas fa-archive"></i> أرشيف الطلاب المحذوفين
            </h2>
            <p class="text-muted">الطلاب الذين تم حذفهم من النظام</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-controller="Students" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-arrow-right"></i> العودة لقائمة الطلاب
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="alert alert-warning mb-3">
                    <i class="fas fa-info-circle"></i>
                    يوجد <strong>@Model.Count()</strong> طالب في الأرشيف
                </div>

                <div class="table-responsive">
                    <table class="table table-hover" id="archiveTable">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>رقم الطالب</th>
                                <th>اسم الطالب</th>
                                <th>الصف</th>
                                <th>الفصل</th>
                                <th>تاريخ الحذف</th>
                                <th>حُذف بواسطة</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 1;
                            }
                            @foreach (var student in Model)
                            {
                                <tr class="table-secondary">
                                    <td>@counter</td>
                                    <td>@student.StudentNumber</td>
                                    <td>
                                        <i class="fas fa-user-slash text-danger"></i>
                                        @student.FullName
                                    </td>
                                    <td>
                                        <span class="badge bg-info">الصف @student.Grade</span>
                                    </td>
                                    <td>
                                        <span class="badge bg-primary">الفصل @student.Class?.ClassName</span>
                                    </td>
                                    <td>
                                        <small>
                                            <i class="fas fa-calendar"></i>
                                            @student.DeletedDate?.ToString("yyyy-MM-dd")
                                            <br>
                                            <i class="fas fa-clock"></i>
                                            @student.DeletedDate?.ToString("HH:mm")
                                        </small>
                                    </td>
                                    <td>
                                        <i class="fas fa-user"></i>
                                        @student.DeletedBy
                                    </td>
                                    <td>
                                        <form asp-action="RestoreStudent" method="post" class="d-inline"
                                              onsubmit="return confirm('هل أنت متأكد من استرجاع الطالب @student.FullName؟');">
                                            @Html.AntiForgeryToken()
                                            <input type="hidden" name="id" value="@student.Id" />
                                            <button type="submit" class="btn btn-sm btn-success" title="استرجاع">
                                                <i class="fas fa-undo"></i> استرجاع
                                            </button>
                                        </form>
                                        <button type="button"
                                                class="btn btn-sm btn-info"
                                                onclick="showStudentDetails(@student.Id)"
                                                title="التفاصيل">
                                            <i class="fas fa-info-circle"></i>
                                        </button>
                                    </td>
                                </tr>
                                counter++;
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="fas fa-inbox fa-4x text-muted mb-3"></i>
                    <h5 class="text-muted">لا يوجد طلاب في الأرشيف</h5>
                    <p class="text-muted">جميع الطلاب نشطون حالياً</p>
                    <a asp-controller="Students" asp-action="Index" class="btn btn-primary mt-3">
                        <i class="fas fa-arrow-right"></i> العودة لقائمة الطلاب
                    </a>
                </div>
            }
        </div>
    </div>

    @if (Model.Any())
    {
        <!-- Bulk Actions Card -->
        <div class="card border-0 shadow-sm mt-3 border-warning">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="mb-1 text-warning">
                            <i class="fas fa-exclamation-triangle"></i> إجراءات جماعية
                        </h6>
                        <small class="text-muted">
                            يمكنك استرجاع جميع الطلاب المحذوفين دفعة واحدة
                        </small>
                    </div>
                    <button type="button" class="btn btn-warning" onclick="confirmRestoreAll()">
                        <i class="fas fa-undo-alt"></i> استرجاع الكل
                    </button>
                </div>
            </div>
        </div>
    }
</div>

<!-- Student Details Modal -->
<div class="modal fade" id="studentDetailsModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-info text-white">
                <h5 class="modal-title">
                    <i class="fas fa-info-circle"></i> تفاصيل الطالب
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="studentDetailsContent">
                <!-- Content will be loaded here -->
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#archiveTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/ar.json'
                },
                pageLength: 25,
                order: [[5, 'desc']] // Sort by deletion date
            });
        });

        function showStudentDetails(studentId) {
            const student = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model));
            const studentData = student.find(s => s.Id === studentId);

            if (studentData) {
                const content = `
                    <table class="table table-bordered">
                        <tr>
                            <th>رقم الطالب</th>
                            <td>${studentData.StudentNumber}</td>
                        </tr>
                        <tr>
                            <th>اسم الطالب</th>
                            <td>${studentData.FullName}</td>
                        </tr>
                        <tr>
                            <th>رقم الجوال</th>
                            <td>${studentData.PhoneNumber || '-'}</td>
                        </tr>
                        <tr>
                            <th>الصف</th>
                            <td>الصف ${studentData.Grade}</td>
                        </tr>
                        <tr>
                            <th>الفصل</th>
                            <td>الفصل ${studentData.ClassNumber}</td>
                        </tr>
                        <tr>
                            <th>تاريخ الإضافة</th>
                            <td>${new Date(studentData.CreatedDate).toLocaleString('ar-SA')}</td>
                        </tr>
                        <tr>
                            <th>أُضيف بواسطة</th>
                            <td>${studentData.CreatedBy}</td>
                        </tr>
                        <tr class="table-danger">
                            <th>تاريخ الحذف</th>
                            <td>${new Date(studentData.DeletedDate).toLocaleString('ar-SA')}</td>
                        </tr>
                        <tr class="table-danger">
                            <th>حُذف بواسطة</th>
                            <td>${studentData.DeletedBy}</td>
                        </tr>
                    </table>
                `;

                document.getElementById('studentDetailsContent').innerHTML = content;
                const modal = new bootstrap.Modal(document.getElementById('studentDetailsModal'));
                modal.show();
            }
        }

        function confirmRestoreAll() {
            if (confirm('هل أنت متأكد من استرجاع جميع الطلاب المحذوفين؟\n\nسيتم استرجاع @Model.Count() طالب')) {
                alert('هذه الميزة قيد التطوير');
                // TODO: Implement bulk restore functionality
            }
        }
    </script>
}