@model IEnumerable<NabdSchool.Web.ViewModels.UserListViewModel>

@{
    ViewData["Title"] = "إدارة المستخدمين";
}

<div class="container-fluid mt-4" dir="rtl">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2 class="mb-0">
                <i class="fas fa-users-cog"></i> إدارة المستخدمين
            </h2>
            <p class="text-muted">إضافة وتعديل وحذف المستخدمين وتحديد الصلاحيات</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fas fa-user-plus"></i> إضافة مستخدم جديد
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card border-0 shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="usersTable">
                    <thead class="table-dark">
                        <tr>
                            <th>#</th>
                            <th>اسم المستخدم</th>
                            <th>الاسم الكامل</th>
                            <th>البريد الإلكتروني</th>
                            <th>رقم الجوال</th>
                            <th>الصلاحيات</th>
                            <th>الحالة</th>
                            <th>الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            int counter = 1;
                            @foreach (var user in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>
                                        <i class="fas fa-user-circle text-primary"></i>
                                        <strong>@user.Username</strong>
                                    </td>
                                    <td>@user.FullName</td>
                                    <td>
                                        <i class="fas fa-envelope text-muted"></i>
                                        @user.Email
                                    </td>
                                    <td>
                                        <i class="fas fa-phone text-muted"></i>
                                        @(string.IsNullOrEmpty(user.PhoneNumber) ? "-" : user.PhoneNumber)
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(user.Roles))
                                        {
                                            @foreach (var role in user.Roles.Split(','))
                                            {
                                                <span class="badge bg-info me-1">@role.Trim()</span>
                                            }
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">بدون صلاحيات</span>
                                        }
                                    </td>
                                    <td>
                                        @if (user.IsActive)
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> نشط
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-lock"></i> مقفل
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="Edit" asp-route-id="@user.Id" 
                                               class="btn btn-sm btn-warning" title="تعديل">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            
                                            <a asp-action="ResetPassword" asp-route-id="@user.Id" 
                                               class="btn btn-sm btn-info" title="إعادة تعيين كلمة المرور">
                                                <i class="fas fa-key"></i>
                                            </a>
                                            
                                            <form asp-action="ToggleLock" method="post" class="d-inline">
                                                <input type="hidden" name="id" value="@user.Id" />
                                                <button type="submit" 
                                                        class="btn btn-sm @(user.IsActive ? "btn-secondary" : "btn-success")" 
                                                        title="@(user.IsActive ? "قفل الحساب" : "إلغاء القفل")">
                                                    <i class="fas @(user.IsActive ? "fa-lock" : "fa-unlock")"></i>
                                                </button>
                                            </form>
                                            
                                            <button type="button" 
                                                    class="btn btn-sm btn-danger" 
                                                    onclick="confirmDelete('@user.Id', '@user.Username')"
                                                    title="حذف">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                                counter++;
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center">
                                    <div class="py-4">
                                        <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                        <p class="text-muted">لا يوجد مستخدمين</p>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle"></i> تأكيد الحذف
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">هل أنت متأكد من حذف المستخدم <strong id="userNameToDelete"></strong>؟</p>
                <p class="text-danger small mt-2 mb-0">
                    <i class="fas fa-info-circle"></i> هذا الإجراء لا يمكن التراجع عنه
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times"></i> إلغاء
                </button>
                <form id="deleteForm" method="post" style="display:inline;">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="userIdToDelete" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> حذف
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#usersTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/ar.json'
                },
                pageLength: 25,
                order: [[1, 'asc']]
            });
        });

        function confirmDelete(userId, userName) {
            document.getElementById('userIdToDelete').value = userId;
            document.getElementById('userNameToDelete').textContent = userName;
            document.getElementById('deleteForm').action = '@Url.Action("Delete", "Users")';
            
            var modal = new bootstrap.Modal(document.getElementById('deleteModal'));
            modal.show();
        }
    </script>
}