@model NabdSchool.Web.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "إعادة تعيين كلمة المرور";
}

<div class="container-fluid mt-4" dir="rtl">
    <div class="row">
        <div class="col-lg-6 offset-lg-3">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-key"></i> إعادة تعيين كلمة المرور
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-warning mb-4">
                        <i class="fas fa-user"></i>
                        <strong>المستخدم:</strong> @Model.Username
                    </div>

                    <form asp-action="ResetPassword" method="post">
                        <input type="hidden" asp-for="UserId" />
                        <input type="hidden" asp-for="Username" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="NewPassword" type="password" class="form-control" placeholder="كلمة المرور الجديدة">
                                <label asp-for="NewPassword">
                                    <i class="fas fa-lock"></i> كلمة المرور الجديدة
                                </label>
                                <span asp-validation-for="NewPassword" class="text-danger small"></span>
                            </div>
                            <small class="text-muted">
                                <i class="fas fa-info-circle"></i>
                                يجب أن تكون كلمة المرور 6 أحرف على الأقل وتحتوي على أرقام وحروف كبيرة وصغيرة
                            </small>
                        </div>

                        <div class="mb-3">
                            <div class="form-floating">
                                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="تأكيد كلمة المرور">
                                <label asp-for="ConfirmPassword">
                                    <i class="fas fa-lock"></i> تأكيد كلمة المرور
                                </label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-exclamation-triangle"></i>
                            <strong>تنبيه:</strong> سيتم إعادة تعيين كلمة المرور مباشرة بعد الحفظ
                        </div>

                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-info btn-lg">
                                <i class="fas fa-save"></i> حفظ كلمة المرور الجديدة
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> إلغاء
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}