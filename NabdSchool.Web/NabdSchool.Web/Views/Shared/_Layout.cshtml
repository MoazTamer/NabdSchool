<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - نظام حضور الطلاب</title>
    
    <!-- Bootstrap RTL CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.rtl.min.css">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- DataTables CSS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css">
    
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/css/Layout.css" />
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar" id="sidebar">
        <div class="sidebar-header">
            <i class="fas fa-graduation-cap fa-3x text-white"></i>
            <h4>نظام حضور الطلاب</h4>
            <small>School Attendance System</small>
        </div>

        <div class="sidebar-menu">
            <a asp-controller="Home" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Home" ? "active" : "")">
                <i class="fas fa-home"></i>
                <span>لوحة التحكم</span>
            </a>

            <a asp-controller="Students" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Students" ? "active" : "")">
                <i class="fas fa-users"></i>
                <span>الطلاب</span>
            </a>

            @if (User.IsInRole("Admin") || User.IsInRole("DataEntry"))
            {
                <a asp-controller="Students" asp-action="Import">
                    <i class="fas fa-file-excel"></i>
                    <span>استيراد من Excel</span>
                </a>
            }

            <a asp-controller="Archive" asp-action="Students">
                <i class="fas fa-archive"></i>
                <span>أرشيف الطلاب</span>
            </a>

            @if (User.IsInRole("Admin"))
            {
                <div style="margin: 15px 25px; border-top: 1px solid rgba(255, 255, 255, 0.1);"></div>

                <a asp-controller="Users" asp-action="Index" class="@(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "active" : "")">
                    <i class="fas fa-users-cog"></i>
                    <span>إدارة المستخدمين</span>
                </a>

                <a asp-controller="Archive" asp-action="Index">
                    <i class="fas fa-file-alt"></i>
                    <span>سجل التدقيق</span>
                </a>

                <a asp-controller="Archive" asp-action="Statistics">
                    <i class="fas fa-chart-pie"></i>
                    <span>الإحصائيات</span>
                </a>
            }

            <div style="margin: 15px 25px; border-top: 1px solid rgba(255, 255, 255, 0.1);"></div>

            <a asp-controller="Account" asp-action="Profile">
                <i class="fas fa-user-circle"></i>
                <span>الملف الشخصي</span>
            </a>

            <a href="#" onclick="document.getElementById('logoutForm').submit();">
                <i class="fas fa-sign-out-alt"></i>
                <span>تسجيل الخروج</span>
            </a>
        </div>
    </div>

    <!-- Main Content -->
    <div class="main-content">
        <!-- Top Bar -->
        <div class="top-bar">
            <div>
                <h5 class="mb-0">@ViewData["Title"]</h5>
            </div>

            <div class="user-info">
                <div class="dropdown">
                    <button class="btn btn-link text-decoration-none dropdown-toggle" type="button" data-bs-toggle="dropdown">
                        <div class="user-avatar">
                            @User.Identity.Name?.Substring(0, 1).ToUpper()
                        </div>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-start">
                        <li class="px-3 py-2 border-bottom">
                            <small class="text-muted">مرحباً،</small>
                            <div><strong>@User.Identity.Name</strong></div>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-controller="Account" asp-action="Profile">
                                <i class="fas fa-user"></i> الملف الشخصي
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item" asp-controller="Account" asp-action="ChangePassword">
                                <i class="fas fa-key"></i> تغيير كلمة المرور
                            </a>
                        </li>
                        <li><hr class="dropdown-divider"></li>
                        <li>
                            <a class="dropdown-item text-danger" href="#" onclick="document.getElementById('logoutForm').submit();">
                                <i class="fas fa-sign-out-alt"></i> تسجيل الخروج
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Page Content -->
        <main>
            @RenderBody()
        </main>
    </div>

    <!-- Logout Form -->
    <form id="logoutForm" asp-controller="Account" asp-action="Logout" method="post" style="display:none;">
        @Html.AntiForgeryToken()
    </form>

    <!-- Mobile Menu Button -->
    <button class="mobile-menu-btn" onclick="toggleSidebar()">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/4.0.0/jquery.validate.unobtrusive.min.js"></script>

    <script>
        function toggleSidebar() {
            document.getElementById('sidebar').classList.toggle('show');
        }

        // Auto-hide alerts
        $(document).ready(function() {
            setTimeout(function() {
                $('.alert').fadeOut('slow');
            }, 5000);
        });
    </script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

