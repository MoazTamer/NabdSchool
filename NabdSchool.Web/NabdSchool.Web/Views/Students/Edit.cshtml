<!-- Edit.cshtml -->
@model NabdSchool.Web.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "تعديل بيانات الطالب";
}

<div class="container-fluid mt-4" dir="rtl">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="fas fa-edit"></i> تعديل بيانات الطالب
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="StudentNumber" class="form-control" placeholder="رقم الطالب">
                                    <label asp-for="StudentNumber">
                                        <i class="fas fa-id-badge"></i> رقم الطالب
                                    </label>
                                    <span asp-validation-for="StudentNumber" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FullName" class="form-control" placeholder="اسم الطالب">
                                    <label asp-for="FullName">
                                        <i class="fas fa-user"></i> اسم الطالب
                                    </label>
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="رقم الجوال">
                                    <label asp-for="PhoneNumber">
                                        <i class="fas fa-phone"></i> رقم الجوال (ولي الأمر)
                                    </label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="GradeId" class="form-select">
                                        @for (int i = 1; i <= 12; i++)
                                        {
                                            <option value="@i">الصف @i</option>
                                        }
                                    </select>
                                    <label asp-for="GradeId">
                                        <i class="fas fa-layer-group"></i> الصف
                                    </label>
                                    <span asp-validation-for="GradeId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="ClassId" class="form-select">
                                        @for (int i = 1; i <= 10; i++)
                                        {
                                            <option value="@i">الفصل @i</option>
                                        }
                                    </select>
                                    <label asp-for="ClassId">
                                        <i class="fas fa-door-open"></i> الفصل
                                    </label>
                                    <span asp-validation-for="ClassId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="alert alert-info mt-3">
                            <i class="fas fa-info-circle"></i>
                            <strong>ملاحظة:</strong> سيتم تسجيل التعديلات في سجل التدقيق
                        </div>

                        <div class="mt-3 d-flex gap-2">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save"></i> حفظ التعديلات
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> إلغاء
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}