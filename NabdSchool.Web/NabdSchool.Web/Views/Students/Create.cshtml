<!-- Create.cshtml - النسخة المحدثة -->
@model NabdSchool.Web.ViewModels.StudentViewModel

@{
    ViewData["Title"] = "إضافة طالب جديد";
}

<div class="container-fluid mt-4" dir="rtl">
    <div class="row">
        <div class="col-lg-8 offset-lg-2">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="fas fa-user-plus"></i> إضافة طالب جديد
                    </h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create" method="post" id="studentForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="StudentNumber" class="form-control" placeholder="رقم الطالب">
                                    <label asp-for="StudentNumber">
                                        <i class="fas fa-id-badge"></i> رقم الطالب
                                    </label>
                                    <span asp-validation-for="StudentNumber" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input asp-for="FullName" class="form-control" placeholder="اسم الطالب">
                                    <label asp-for="FullName">
                                        <i class="fas fa-user"></i> اسم الطالب
                                    </label>
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-floating">
                                    <input asp-for="PhoneNumber" class="form-control" placeholder="رقم الجوال">
                                    <label asp-for="PhoneNumber">
                                        <i class="fas fa-phone"></i> رقم الجوال (ولي الأمر)
                                    </label>
                                    <span asp-validation-for="PhoneNumber" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="GradeId" class="form-select" id="gradeSelect">
                                        <option value="">اختر الصف</option>
                                    </select>
                                    <label asp-for="GradeId">
                                        <i class="fas fa-layer-group"></i> الصف
                                    </label>
                                    <span asp-validation-for="GradeId" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select asp-for="ClassId" class="form-select" id="classSelect" disabled>
                                        <option value="">اختر الصف أولاً</option>
                                    </select>
                                    <label asp-for="ClassId">
                                        <i class="fas fa-door-open"></i> الفصل
                                    </label>
                                    <span asp-validation-for="ClassId" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="mt-4 d-flex gap-2">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-save"></i> حفظ
                            </button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-times"></i> إلغاء
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Load Grades on page load
            loadGrades();

            // When grade changes, load classes
            $('#gradeSelect').change(function() {
                const gradeId = $(this).val();
                if (gradeId) {
                    loadClasses(gradeId);
                } else {
                    $('#classSelect').html('<option value="">اختر الصف أولاً</option>').prop('disabled', true);
                }
            });
        });

        function loadGrades() {
            $.ajax({
                url: '/api/grades',
                type: 'GET',
                success: function(data) {
                    let options = '<option value="">اختر الصف</option>';
                    data.forEach(grade => {
                        options += `<option value="${grade.id}">${grade.gradeName}</option>`;
                    });
                    $('#gradeSelect').html(options);
                },
                error: function() {
                    alert('حدث خطأ في تحميل الصفوف');
                }
            });
        }

        function loadClasses(gradeId) {
            $.ajax({
                url: `/api/grades/${gradeId}/classes`,
                type: 'GET',
                success: function(data) {
                    let options = '<option value="">اختر الفصل</option>';
                    data.forEach(cls => {
                        options += `<option value="${cls.id}">${cls.className}</option>`;
                    });
                    $('#classSelect').html(options).prop('disabled', false);
                },
                error: function() {
                    alert('حدث خطأ في تحميل الفصول');
                }
            });
        }
    </script>
}

